{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "labels": ["dependencies"],
  "prConcurrentLimit": 3,
  "prHourlyLimit": 2,
  "schedule": ["before 6am on Monday"],
  "packageRules": [
    {
      "description": "Group all minor and patch updates",
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    },
    {
      "description": "React/Ink major updates require careful testing",
      "matchPackageNames": ["react", "ink"],
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["dependencies", "breaking-change"]
    },
    {
      "description": "Zod major updates require schema migration",
      "matchPackageNames": ["zod"],
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["dependencies", "breaking-change"]
    },
    {
      "description": "Type definitions",
      "matchPackagePatterns": ["^@types/"],
      "groupName": "Type definitions"
    },
    {
      "description": "Dev dependencies",
      "matchDepTypes": ["devDependencies"],
      "groupName": "Dev dependencies"
    }
  ]
}
