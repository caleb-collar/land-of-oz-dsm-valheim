{
  "name": "oz-valheim",
  "version": "0.2.0",
  "description": "Land of OZ - Valheim Dedicated Server Manager",
  "type": "module",
  "bin": {
    "oz-valheim": "./dist/main.js"
  },
  "scripts": {
    "dev": "tsx watch main.ts",
    "start": "tsx main.ts",
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "prepare": "tsx scripts/install-hooks.ts"
  },
  "dependencies": {
    "conf": "^13.0.1",
    "fullscreen-ink": "^0.0.2",
    "ink": "^5.1.0",
    "react": "^18.3.1",
    "zod": "^3.24.2",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.13.1",
    "@types/react": "^18.3.18",
    "tsx": "^4.19.2",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "valheim",
    "dedicated-server",
    "server-manager",
    "tui",
    "terminal"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/land-of-oz/valheim-dsm"
  }
}
