{
  "name": "valheim-oz-dsm",
  "version": "0.6.0",
  "description": "Land of OZ - Valheim Dedicated Server Manager",
  "type": "module",
  "bin": {
    "oz-valheim": "./dist/main.js"
  },
  "main": "./dist/main.js",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "dev": "tsx watch main.ts",
    "start": "tsx main.ts",
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "prepare": "tsx scripts/install-hooks.ts",
    "prepublishOnly": "npm run typecheck && npm run lint && npm test && npm run build"
  },
  "dependencies": {
    "@caleb-collar/steamcmd": "^1.1.0",
    "conf": "^13.0.1",
    "fullscreen-ink": "^0.1.0",
    "ink": "^6.6.0",
    "react": "^19.2.4",
    "zod": "^4.3.6",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/node": "^22.13.1",
    "@types/react": "^19.2.10",
    "@vitest/coverage-v8": "^3.2.4",
    "tsup": "^8.3.6",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "valheim",
    "dedicated-server",
    "server-manager",
    "tui",
    "terminal"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/land-of-oz/valheim-dsm"
  }
}
