{
  "name": "@land-of-oz/valheim-dsm",
  "version": "0.1.0",
  "exports": "./src/mod.ts",
  "tasks": {
    "dev": "deno run --watch --allow-all --unstable-kv main.ts",
    "start": "deno run --allow-all --unstable-kv main.ts",
    "test": "deno test --allow-all --unstable-kv",
    "check": "deno check main.ts src/**/*.ts src/**/*.tsx",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/path": "jsr:@std/path@1",
    "@std/fs": "jsr:@std/fs@1",
    "react": "npm:react@18",
    "react/jsx-runtime": "npm:react@18/jsx-runtime",
    "ink": "npm:ink@5",
    "zustand": "npm:zustand@5",
    "zod": "npm:zod@3"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": ["npm:@types/react@18"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": false
  },
  "unstable": ["kv"]
}
